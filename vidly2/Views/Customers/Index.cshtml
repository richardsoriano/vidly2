@model IEnumerable<vidly2.Models.Customer>
@*
   ViewData["Title"]="Customers";
   Layout = "~/Views/Shared/_Layout.cshtml";

*@
<h2>Customers</h2>
@if (!Model.Any())
{
    <p>We don't have any customers</p>
}
else
{
    <table>
        <thead>
            <tr><td>1Name</td></tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr><td>@Html.ActionLink(customer.Name, "Details","Customers", new {id=customer.Id},null)</td></tr>
            }
        </tbody>
    </table>
}
